{
  "tasks": {
    "dev": "deno run -A --watch main.ts",
    "compile": "deno task compile:linux_x86 && deno task compile:linux_arm && deno task compile:windows_x86 && deno task compile:mac_x86 && deno task compile:mac_arm",
    "compile:linux_x86": "deno compile -A --target x86_64-unknown-linux-gnu --output ./bin/drone-dashboard_linux_x86 --include ./static main.ts",
    "compile:linux_arm": "deno compile -A --target aarch64-unknown-linux-gnu --output ./bin/drone-dashboard_linux_arm --include ./static main.ts",
    "compile:windows_x86": "deno compile -A --target x86_64-pc-windows-msvc --output ./bin/drone-dashboard.exe --include ./static main.ts",
    "compile:mac_x86": "deno compile -A --target x86_64-apple-darwin --output ./bin/drone-dashboard_mac_x86 --include ./static main.ts",
    "compile:mac_arm": "deno compile -A --target aarch64-apple-darwin --output ./bin/drone-dashboard_mac_arm --include ./static main.ts"
  }
}