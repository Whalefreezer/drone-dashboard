{
	"tasks": {
		"playwright": "PW_TEST_CONNECT_WS_ENDPOINT=ws://0.0.0.0:3000/ deno run -A --node-modules-dir npm:playwright",
		"server": "docker run -p 3000:3000 --add-host=host.docker.internal:host-gateway --rm --init -it --workdir /home/pwuser --user pwuser mcr.microsoft.com/playwright:v1.55.0-noble /bin/sh -c \"npx -y playwright@1.55.0 run-server --port 3000 --host 0.0.0.0\"",
		"server:start": "docker run -d --name playwright-server -p 3000:3000 --add-host=host.docker.internal:host-gateway --init --workdir /home/pwuser --user pwuser mcr.microsoft.com/playwright:v1.55.0-noble /bin/sh -c \"npx -y playwright@1.55.0 run-server --port 3000 --host 0.0.0.0\"",
		"server:stop": "docker stop playwright-server",
		"e2e": "deno task playwright test",
		"e2e:summary": "deno run -A src/summary.ts",
		"e2e:run": "deno run -A src/e2e-runner.ts",
		"preflight": "deno run -A src/preflight.ts",
		"e2e:report": "deno task playwright show-report artifacts/report",
		"verify": "deno fmt --check && deno lint && deno check -q"
	},
	"imports": {
		"@faker-js/faker": "npm:@faker-js/faker@^10.0.0",
		"@playwright/test": "npm:@playwright/test@^1.55.0",
		"@std/assert": "jsr:@std/assert@1",
		"@std/cli": "jsr:@std/cli@^1.0.22",
		"@std/fs": "jsr:@std/fs@^1.0.19",
		"@types/node": "npm:@types/node@^24.3.1"
	},
	"fmt": {
		"useTabs": true,
		"singleQuote": true
	}
}
