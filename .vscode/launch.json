{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "runtimeExecutable": "/run/current-system/sw/bin/google-chrome-stable",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/frontend"
        },
		{
			"request": "launch",
			"name": "Go (Cloud)",
			"type": "go",
			"program": "${workspaceFolder}/backend/main.go",
			"cwd": "${workspaceFolder}/backend",
			"env": {
				"LOG_FILE": "${workspaceFolder}/backend/run-cloud/cloud.log"
			},
            "envFile": "${workspaceFolder}/backend/.env",
            "args": [
                "--port=8090",
                "--auth-token=DEVSECRET",
                "--log-level=info",
                "--db-dir=./run-cloud"
            ]
        },
		{
			"request": "launch",
			"name": "Go (Pits)",
			"type": "go",
			"program": "${workspaceFolder}/backend/main.go",
			"cwd": "${workspaceFolder}/backend",
			"env": {
				"LOG_FILE": "${workspaceFolder}/backend/run-pits/pits.log"
			},
            "envFile": "${workspaceFolder}/backend/.env",
            "args": [
                "--port=8091",
                "--fpvtrackside=http://127.0.0.1:8080",
                "--cloud-url=ws://127.0.0.1:8090/control",
                "--auth-token=DEVSECRET",
                "--log-level=info",
            ]
        },
        {
            "request": "launch",
            "name": "Go (Remote)",
            "type": "go",
            "program": "${workspaceFolder}/backend/main.go",
            "cwd": "${workspaceFolder}/backend",
            "env": {},
            "envFile": "${workspaceFolder}/backend/.env",
            "args": [
                "--port=8091",
                "--fpvtrackside=http://127.0.0.1:8080",
                "--cloud-url=wss://race.aufpv.org.au/control",
                "--log-level=trace",
                "--ingest-enabled=false"
            ]
        },
        {
            "request": "launch",
            "name": "Go (Import)",
            "type": "go",
            "program": "${workspaceFolder}/backend/main.go",
            "cwd": "${workspaceFolder}/backend",
            "env": {},
            "envFile": "${workspaceFolder}/backend/.env",
            "args": [
                "--port=8090",
                "--ingest-enabled=false",
                "--import-snapshot=${workspaceFolder}/snapshots/96-pilots.json"
            ]
        },
        {
            "name": "Deno Dev",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "env": {
                "VITE_API_URL": "http://localhost:8090"
            },
            "runtimeExecutable": "deno",
            "args": [
                "--node-modules-dir",
                "npm:vite"
            ],
            "runtimeArgs": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "name": "Deno Dev (Remote)",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}/frontend",
            "env": {
                "VITE_API_URL": "https://race.aufpv.org.au",
            },
            "runtimeExecutable": "deno",
            "args": [
                "--node-modules-dir",
                "npm:vite"
            ],
            "runtimeArgs": [],
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen"
        },
        {
            "request": "launch",
            "name": "Launch Program",
            "type": "node",
            "program": "${workspaceFolder}/main.ts",
            "cwd": "${workspaceFolder}",
            "env": {},
            "runtimeExecutable": "deno",
            "runtimeArgs": [
                "run",
                "--unstable",
                "--inspect-wait",
                "--allow-all"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "Debug Deno Tests",
            "type": "node",
            "cwd": "${workspaceFolder}/frontend",
            "runtimeExecutable": "/run/current-system/sw/bin/deno",
            "outputCapture": "std",
            "runtimeArgs": [
                "test",
                "--inspect-wait",
                "--allow-env",
                "--allow-read",
                "--allow-net",
                "--allow-write",
                "--unstable-broadcast-channel",
                "src/pilot/PilotChannelView.test.tsx"
            ],
            "attachSimplePort": 9229
        },
        {
            "request": "launch",
            "name": "ðŸ§ª Run E2E Tests",
            "type": "node",
            "cwd": "${workspaceFolder}/e2e",
            "runtimeExecutable": "deno",
            "outputCapture": "std",
            "runtimeArgs": [
                "run",
                "--inspect-wait",
                "--allow-run",
                "--allow-net",
                "--allow-env",
                "--allow-read",
                "src/e2e-runner.ts"
            ],
            "attachSimplePort": 9229,
            "presentation": {
                "group": "test",
                "order": 1
            }
        }
    ],
    "compounds": [
        {
            "name": "ðŸš€ Full Stack Dev (Offline)",
            "configurations": [
                "Deno Dev",
                "Launch Chrome",
                "Go (Import)",
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            }
        },
        {
            "name": "ðŸš€ Full Stack Dev (Cloud+Pits)",
            "configurations": [
                "Deno Dev",
                "Launch Chrome",
                "Go (Cloud)",
                "Go (Pits)"
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            }
        },
        {
            "name": "ðŸš€ Client (Remote)",
            "configurations": [
                "Deno Dev (Remote)",
                "Launch Chrome",
            ],
            "stopAll": true,
            "presentation": {
                "hidden": false,
                "group": "fullstack",
                "order": 1
            }
        }
    ]
}
